{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"rules": {
		"semicolon": [
			true,
			"never"
		],
		"indent": [
			true,
			"tabs",
			4
		],
		"object-literal-sort-keys": false,
		"ordered-imports": false,
		"quotemark": [
			true,
			"single"
		],
		"arrow-parens": false,
		"trailing-comma": [
			true,
			{
				"multiline": {
					"objects": "always",
					"arrays": "always",
					"functions": "never",
					"typeLiterals": "ignore"
				},
				"esSpecCompliant": true
			}
		],
		"interface-name": [
			false,
			"always-prefix"
		],
		"no-console": [
			false,
			"warning"
		],
		"no-bitwise": false
	}
}
