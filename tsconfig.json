{
	"compilerOptions": {
		"module": "commonjs",
        "moduleResolution": "node",
        "types": ["node"],
		"newLine": "LF",
		"outDir": "./lib/",
		"target": "es5",
		"sourceMap": true,
		"declaration": true,
		"jsx": "preserve",
		"lib": [
			"es2017",
			"dom"
		],
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true
    },
    "parcelTsPluginOptions": {
        // If true type-checking is disabled
        "transpileOnly": false
    },
	"include": [
		"src/**/*"
	],
	"exclude": [
		".git",
		"node_modules"
	]
}
