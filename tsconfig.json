{
	"compilerOptions": {
        "strict": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"types": ["node", "jest"],
		"newLine": "LF",
		"outDir": "./lib/",
		"target": "es5",
		"sourceMap": true,
		"declaration": true,
		"jsx": "preserve",
		"lib": [
			"es2017",
			"dom"
		],
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": "./src",
		"paths": {
			"~/*": ["*"]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		".git",
		"node_modules"
	]
}
