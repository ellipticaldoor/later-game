{
	"compilerOptions": {
		"strict": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"types": ["node", "jest"],
		"newLine": "LF",
		"outDir": "server_build",
		"sourceMap": true,
		"declaration": true,
		"jsx": "preserve",
		"target": "es2017",
		"lib": [
			"es2017",
			"dom"
		],
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"experimentalDecorators": true,
		"baseUrl": "./src",
		"paths": {
			"@client/*": ["./client/*"],
			"@server/*": ["./server/*"]
		}
	},
	"include": [
		"src/server/**/*.ts"
	],
	"exclude": [
		".git",
        "node_modules",
        "src/client/**/*.ts"
	]
}
