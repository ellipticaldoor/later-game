{
	"compilerOptions": {
		"strict": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noFallthroughCasesInSwitch": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"types": ["node", "jest", "pixi.js", "matter-js"],
		"newLine": "LF",
		"outDir": "lib",
		"jsx": "preserve",
		"target": "es2017",
		"lib": ["es2017", "dom"],
		"baseUrl": "./src"
	},
	"exclude": [
		".cache",
		".git",
		"dist",
		"node_modules",
		"server_build",
		"client_build"
	]
}
