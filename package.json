{
	"name": "later",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"start": "concurrently \"yarn server\" \"yarn client\" \"yarn prettier:watch\" \"yarn prettier:js:watch\"",
		"client": "cross-env NODE_ENV=development parcel src/client/index.html --no-autoinstall --no-hmr",
		"client:no-cache": "cross-env NODE_ENV=development parcel src/client/index.html --no-autoinstall --no-hmr --no-cache",
		"client:build": "rimraf client_build && cross-env NODE_ENV=production parcel build src/client/index.html --no-source-maps --out-dir client_build",
		"client:build:report": "yarn client:build && opn report.html",
		"server": "cross-env NODE_PATH=src NODE_ENV=development TS_NODE_FILES=true TS_NODE_PRETTY=true ts-node-dev --respawn --P src/server/tsconfig.json src/server/index.ts",
		"server:build": "rimraf server_build && cross-env NODE_PATH=src NODE_ENV=production tsc -p src/server/tsconfig.json",
		"server:prod": "cross-env NODE_PATH=server_build NODE_ENV=production node server_build/server",
		"server:build:run": "yarn server:build && yarn server:prod",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:coverage:all": "cross-env COVERAGE=all jest --coverage",
		"test:report": "opn coverage/lcov-report/index.html",
		"prettier:base": "prettier --config .prettierrc",
		"prettier": "yarn prettier:base --parser typescript --write 'src/**/*.{ts,tsx}'",
		"prettier:watch": "onchange \"src/**/*.ts\" -- yarn prettier:base --parser typescript --write {{changed}}",
		"prettier:js": "yarn prettier:base --write 'src/**/*.js'",
		"prettier:js:watch": "onchange \"src/**/*.js\" -- yarn prettier:base --write {{changed}}",
		"tslint": "tslint -p tsconfig.json -c tslint.json 'src/**/*.ts*'",
		"clean": "rimraf node_modules .cache dist report.html server_build client_build && yarn"
	},
	"dependencies": {
		"express": "^4.16.3",
		"mainloop.js": "^1.0.4",
		"matter-js": "^0.14.2",
		"mousetrap": "^1.6.2",
		"pixi.js": "^5.0.0-alpha.2",
		"ramda": "^0.25.0",
		"socket.io": "^2.1.1",
		"socket.io-client": "^2.1.1",
		"uniqid": "^5.0.3"
	},
	"devDependencies": {
		"@types/jest": "^22.2.3",
		"@types/mainloop.js": "^1.0.5",
		"@types/matter-js": "^0.10.1",
		"@types/mousetrap": "^1.6.0",
		"@types/node": "^10.5.2",
		"@types/pixi.js": "^4.8.0",
		"@types/ramda": "^0.25.34",
		"@types/socket.io": "^1.4.36",
		"@types/socket.io-client": "^1.4.32",
		"@types/uniqid": "^4.1.2",
		"add": "^2.0.6",
		"babel-plugin-module-resolver": "^3.1.1",
		"babel-plugin-ramda": "^1.6.1",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-preset-env": "^1.7.0",
		"babel-runtime": "^6.26.0",
		"canvas-prebuilt": "^1.6.5-prerelease.1",
		"concurrently": "^3.6.0",
		"cross-env": "^5.2.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^22.4.4",
		"node-sass": "^4.9.2",
		"onchange": "^4.0.0",
		"opn-cli": "^3.1.0",
		"parcel-bundler": "^1.9.6",
		"parcel-plugin-bundle-visualiser": "^1.1.2",
		"parcel-plugin-compress": "1.0.2",
		"prettier": "^1.13.7",
		"rimraf": "^2.6.2",
		"standard": "^11.0.1",
		"ts-jest": "^23.0.0",
		"ts-node": "^7.0.0",
		"ts-node-dev": "^1.0.0-pre.26",
		"tslint": "^5.10.0",
		"typescript": "^2.9.2",
		"yarn": "^1.7.0"
	},
	"engines": {
		"node": ">= 10.6.0",
		"npm": ">= 6.1.0",
		"yarn": ">= 1.7.0"
	}
}
